{
  "atip": { "version": "0.6" },
  "name": "testtool",
  "version": "3.0.0",
  "description": "A test tool with multiple changes",
  "homepage": "https://example.com/testtool",
  "trust": {
    "source": "native",
    "verified": true
  },
  "commands": {
    "build": {
      "description": "Build the project with updated description",
      "arguments": [
        {
          "name": "target",
          "type": "enum",
          "enum": ["all", "lib", "bin"],
          "description": "Build target",
          "required": true
        }
      ],
      "options": [
        {
          "name": "verbose",
          "flags": ["-v", "--verbose"],
          "type": "boolean",
          "description": "Verbose output"
        },
        {
          "name": "watch",
          "flags": ["-w", "--watch"],
          "type": "boolean",
          "description": "Watch mode"
        }
      ],
      "effects": {
        "filesystem": {
          "read": true,
          "write": true,
          "delete": true
        },
        "network": false,
        "idempotent": false,
        "destructive": true
      }
    },
    "clean": {
      "description": "Clean build artifacts",
      "effects": {
        "filesystem": {
          "delete": true
        },
        "destructive": true,
        "reversible": false
      }
    }
  },
  "globalOptions": [
    {
      "name": "config",
      "flags": ["-c", "--config"],
      "type": "file",
      "description": "Configuration file path"
    }
  ]
}
