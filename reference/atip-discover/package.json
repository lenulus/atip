{
  "name": "atip-discover",
  "version": "0.1.0",
  "description": "Discover ATIP-compatible tools on your system",
  "type": "module",
  "bin": {
    "atip-discover": "./dist/cli.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "atip",
    "agent",
    "tool-discovery",
    "cli-tools",
    "introspection"
  ],
  "author": "ATIP Contributors",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ajv": "^8.12.0",
    "p-limit": "^5.0.0",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/minimatch": "^5.1.2",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
